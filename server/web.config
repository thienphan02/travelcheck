<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Route requests for the backend (e.g., /signup, /login) to the Node.js backend -->
        <rule name="Node.js Backend Routing" stopProcessing="true">
          <match url="^(signup|login|auth|reviews|favorites|blogs|settings|manage|adminUser).*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>

        <!-- Redirect all remaining requests to React's index.html -->
        <rule name="React SPA Routing" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/server.js" />
        </rule>
      </rules>
    </rewrite>

    <handlers>
      <!-- Add handler for Node.js -->
      <add name="iisnode" path="/server.js" verb="*" modules="iisnode" />
    </handlers>

    <iisnode>
      <!-- Node.js environment setting -->
      <node_env value="production" />
    </iisnode>
  </system.webServer>
</configuration>
